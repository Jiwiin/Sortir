<div class="container">
    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-4">
            <div class="form-group row">
                <label class="col-md-3 col-form-label" for="{{ form.campus.vars.id }}">
                    {{ form_label(form.campus) }}
                </label>
                <div class="col-md-9">
                    {{ form_widget(form.campus) }}
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-7 col-form-label" for="{{ form.q.vars.id }}">
                    {{ form_label(form.q) }}
                </label>
                <div class="col-md-5">
                    {{ form_widget(form.q) }}
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-5 col-form-label text-end" for="{{ form.startDate.vars.id }}">
                    {{ form_label(form.startDate) }}
                </label>
                <div class="col-md-7">
                    {{ form_widget(form.startDate) }}
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-5 col-form-label text-end" for="{{ form.endDate.vars.id }}">
                    {{ form_label(form.endDate) }}
                </label>
                <div class="col-md-7">
                    {{ form_widget(form.endDate) }}
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="row">
                <div class="col-12">
                    {{ form_row(form.organized) }}
                </div>
                <div class="col-12">
                    {{ form_row(form.registered) }}
                </div>
                <div class="col-12">
                    {{ form_row(form.notRegistered) }}
                </div>
                <div class="col-12">
                    {{ form_row(form.eventCompleted) }}
                </div>
            </div>
        </div>
        <div class="col-md-2 d-flex align-items-center justify-content-center">
            <button type="submit" class="btn btn-primary">Rechercher</button>
        </div>
    </div>
    {{ form_end(form) }}
</div>
