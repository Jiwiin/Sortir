{% extends 'base.html.twig' %}

{% block title %}Liste des sorties - {{ parent() }}{% endblock %}

{% block body %}
    <div class="container">
    <h2>Filtrer les sorties</h2>
    <form action="{{ path('app_event_index') }}" method="get" class="filter">
    <div>

        <label for="campus">Campus : </label>
        <select id="campus" name="campus" onchange="this.form.submit()">
            {% if app.user and app.user.campus %}
            <option value="{{ app.user.campus.id }}"> {{ app.user.campus.name }} </option>
            {% endif %}
            {% for site in campus %}
                {% if not app.user.campus or site.id != app.user.campus.id %}
                    <option value="{{ site.id }}">{{ site.name }}</option>
                {% endif %}
            {% endfor %}
        </select>

    </div>
    </form>

    <table class="table">
        <thead>
            <tr>
                <th>Nom de la sortie</th>
                <th>Date de la sortie</th>
                <th>Clôture</th>
                <th>Inscrits/Places</th>
                <th>Organisateur</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.name }}</td>
                <td>{{ event.dateStart ? event.dateStart|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ event.dateLimitRegistration ? event.dateLimitRegistration|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ event.participate.count }}/ {{ event.maxRegistration }}</td>
                <td>{{ event.eventOrganizer.username }}</td>
                <td>
                    <a href="{{ path('app_event_show', {'id': event.id}) }}">show</a>
                    <a href="{{ path('app_event_edit', {'id': event.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucune sortie trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>


    <a href="{{ path('app_event_new') }}">Create new</a>
{% endblock %}
