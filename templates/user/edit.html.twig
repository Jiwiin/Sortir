{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
    <h1>Edit User</h1>
<div class="modify_user">
    {{ form_errors(form) }}

    {{ form_start(form) }}
    {{ form_row(form.username, {
        label: 'Pseudo :',
        attr: {'class': 'form-control',
            'autocomplete' : 'username'
        }
    }) }}
    {{ form_row(form.lastname, {
        label: 'Nom :',
        attr: {'class': 'form-control',
            'autocomplete' : 'lastname'
        }
    }) }}
    {{ form_row(form.firstname, {
        label: 'Prénom :',
        attr: {'class': 'form-control',
            'autocomplete' : 'name'
        }
    }) }}
    {{ form_row(form.email, {
        label: 'Email :',
        attr: {'class': 'form-control',
            'autocomplete' : 'email'
        }
    }) }}
    {{ form_row(form.phone, {
        label: 'Téléphone :',
        attr: {'class': 'form-control',
            'autocomplete' : 'telephone'
        }
    }) }}
    <label for="{{ form.password.vars.id }}">Mot de passe :</label>
        <input type="password" id="{{ form.password.vars.id }}" name="{{ form.password.vars.full_name }}" class="form-control">
    <label for="{{ form.password.vars.id }}">Confirmer le mot de passe :</label>
    <input type="password" id="{{ form.password.vars.id }}" name="{{ form.password.vars.full_name }}" class="form-control">
</div>
    <button type="submit" class="btn">Modifier</button>

    {{ form_end(form) }}


    <a href="{{ path('app_event_index') }}">Retour</a>
{% endblock %}
